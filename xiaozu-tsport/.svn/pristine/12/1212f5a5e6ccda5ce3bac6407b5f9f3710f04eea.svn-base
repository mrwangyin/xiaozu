<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>xiaozu-tsport</artifactId>
        <groupId>com.xiaozu</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.xiaozu.tsport.admin</groupId>
    <artifactId>tsport-admin</artifactId>
    <packaging>jar</packaging>

    <description>
        service
    </description>

    <dependencies>
        <!-- spring-boot-devtools -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <optional>true</optional> <!-- 表示依赖不会传递 -->
        </dependency>

        <!-- 核心模块-->
        <dependency>
            <groupId>com.xiaozu.tsport.framework</groupId>
            <artifactId>tsport-framework</artifactId>
            <version>${framework.version}</version>
        </dependency>

        <!--代码生成器-->
        <dependency>
            <groupId>com.xiaozu.tsport.generator</groupId>
            <artifactId>tsport-generator</artifactId>
            <version>${generator.version}</version>
        </dependency>

        <!--会员-->
        <dependency>
            <groupId>com.xiaozu.tsport.member</groupId>
            <artifactId>tsport-member</artifactId>
            <version>${member.version}</version>
        </dependency>

        <!--订单-->
        <dependency>
            <groupId>com.xiaozu.tsport.order</groupId>
            <artifactId>tsport-order</artifactId>
            <version>${order.version}</version>
        </dependency>

        <!--定时器-->
        <dependency>
            <groupId>com.xiaozu.tsport.quartz</groupId>
            <artifactId>tsport-quartz</artifactId>
            <version>${quartz.version}</version>
        </dependency>

        <!--基础配置模块-->
        <dependency>
            <groupId>com.xiaozu.tsport.system</groupId>
            <artifactId>tsport-system</artifactId>
            <version>${system.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <fork>true</fork> <!-- 如果没有该配置，devtools不会生效 -->
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.0.0</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                    <warName>${artifactId}</warName>
                </configuration>
            </plugin>
        </plugins>
        <finalName>${artifactId}</finalName>
    </build>
</project>